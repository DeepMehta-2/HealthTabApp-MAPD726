<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_250sdp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/backgotit"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">
    <TextView
        android:id="@+id/custext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Notification"
        android:textColor="@color/blue"
        android:layout_marginBottom="@dimen/_5sdp"
        android:fontFamily="@font/gravitybold"
        android:textSize="@dimen/_15sdp" />
    <RelativeLayout
        android:id="@+id/relauto"
        android:layout_below="@+id/custext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/redauto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/turnoff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@android:color/transparent"
                android:drawableTop="@drawable/notificationtrunoff_selector"
                android:gravity="center"
                android:text="off"
                android:layout_marginRight="@dimen/_5sdp"
                android:textSize="@dimen/_9sdp"
                android:fontFamily="@font/font"
                android:textColor="@color/noti" />

            <RadioButton
                android:id="@+id/turnmute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:button="@android:color/transparent"
                android:drawableTop="@drawable/notificationmute_selector"
                android:gravity="center"
                android:text="Mute"
                android:textSize="@dimen/_9sdp"
                android:fontFamily="@font/font"
                android:textColor="@color/noti" />

            <RadioButton
                android:id="@+id/auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:button="@android:color/transparent"
                android:layout_marginLeft="@dimen/_5sdp"
                android:drawableTop="@drawable/notification_selector"
                android:gravity="center"
                android:text="Auto"
                android:textSize="@dimen/_9sdp"
                android:fontFamily="@font/font"
                android:textColor="@color/noti" />
        </RadioGroup>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relauto"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_26sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttoncancelauto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:gravity="center"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_26sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonokauto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:text="Ok"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
