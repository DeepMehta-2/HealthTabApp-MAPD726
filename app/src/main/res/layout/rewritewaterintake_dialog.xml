<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_250sdp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/backgotit">

    <TextView
        android:id="@+id/textinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/gravitybold"
        android:text="Rewrite water intake"
        android:textColor="@color/blue"
        android:textSize="@dimen/_15sdp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imagebuttondelete"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_10sdp"
        app:srcCompat="@mipmap/delete"
        android:tint="@color/darkgray"/>



    <RelativeLayout
        android:id="@+id/linearmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textinfo"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/redrewite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdb1"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/redio_selector"
                    android:baselineAligned="false"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:text="1/4"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_11sdp" />

                <RadioButton
                    android:id="@+id/rdb2"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/redio_selector"
                    android:baselineAligned="false"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:text="2/4"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_11sdp" />

                <RadioButton
                    android:id="@+id/rdb3"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:background="@drawable/redio_selector"
                    android:baselineAligned="false"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:text="3/4"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_11sdp" />

                <RadioButton
                    android:id="@+id/rdb4"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:background="@drawable/redio_selector"
                    android:baselineAligned="false"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:text="4/4"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_11sdp" />
            </RadioGroup>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearmain"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtml1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/font"
            android:text="50ml"
            android:layout_marginLeft="@dimen/_32sdp"
            android:textColor="@color/dialogtext"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/txtml2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/font"
            android:text="100ml"
            android:textColor="@color/dialogtext"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/txtml3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_23sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="150ml"
            android:fontFamily="@font/font"
            android:textColor="@color/dialogtext"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/txtml4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_22sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:maxLines="1"
            android:fontFamily="@font/font"
            android:text="200ml"
            android:textColor="@color/dialogtext"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_27sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttoncancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:gravity="center"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_27sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:text="Ok"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
