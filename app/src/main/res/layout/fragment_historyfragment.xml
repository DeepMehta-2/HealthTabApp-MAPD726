<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Every journey begins with a single cup of water"
                android:textColor="@color/white"
                android:fontFamily="@font/gravitybold"
                android:textSize="@dimen/_9sdp" />


            <LinearLayout
                android:id="@+id/reporttype"
                android:layout_below="@+id/text"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_7sdp"
                android:background="@drawable/his_main">

                <Button
                    android:id="@+id/btnMonth"
                    android:layout_width="@dimen/_85sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/his_left"
                    android:text="Month"
                    android:textAllCaps="false"
                    android:fontFamily="@font/font"
                    android:textColor="@color/darkblue"
                    android:textSize="@dimen/_10sdp" />

                <Button
                    android:id="@+id/btnYear"
                    android:layout_width="@dimen/_85sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:text="Year"
                    android:textAllCaps="false"
                    android:fontFamily="@font/font"
                    android:textColor="@color/darkblue"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relchart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_7sdp">

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/textviewyear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relchart"
            android:layout_gravity="center"
            android:text="April - 2019"
            android:fontFamily="@font/gravitybold"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_17sdp"
            android:padding="@dimen/_5sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtdarinkreport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:fontFamily="@font/gravitybold"
                    android:text="Drink Water Report"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_14sdp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/reporttype"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_7sdp"
                android:padding="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:background="@drawable/bg_his"
                android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_5sdp"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txtweekly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/gravitybold"
                    android:text="Weekly average: "
                    android:textColor="#09746b"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/txtweekResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:layout_weight="1"
                    android:text="300 ml"
                    android:fontFamily="@font/gravitybold"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_5sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtmonthlyAvg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/gravitybold"
                    android:text="Monthly average : "
                    android:textColor="#09746b"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/txtmonthlyAvgResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:fontFamily="@font/gravitybold"
                    android:text="dgfhgh"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:background="@drawable/bg_his"
                android:padding="@dimen/_6sdp"
                android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_5sdp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtAvgComp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:fontFamily="@font/gravitybold"
                    android:layout_weight="1"
                    android:textColor="#09746b"
                    android:text="Average Completion : "
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/txtAvgCompResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="gikuhj"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:fontFamily="@font/gravitybold"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_5sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtdrinkFrenq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:fontFamily="@font/gravitybold"
                    android:layout_weight="1"
                    android:text="Drink Frenquency : "
                    android:textColor="#09746b"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/txtdrinkFrenqResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="hfygg"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:fontFamily="@font/gravitybold"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
